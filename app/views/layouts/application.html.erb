<!DOCTYPE html>
<html>
    <head>
        <title>Stephanie Castro | VA & Social Media Manager</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Hi! I am a Virtual Assistant." />
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <% if notice %>
            <div id="notice-wrapper">
                <p class="notice"><%= notice %></p>
            </div>
        <%elsif alert%>
            <div id="notice-wrapper">
                <p class="alert"><%= alert %></p>
            </div>
        <%end%>
        <nav>
            <div class="logo">
                <h4>Stephanie Castro</h4>
            </div>
            <ul class="nav-links">
                <li><a href="<%= root_path %>">Home</a></li>
                <li><a href="#about-me">About Me</a></li>
                <li><a href="#services">What I Do</a></li>
                <li><a href="#my-portfolio">Portfolio</a></li>
                <li><a href="#contact-me" class="hire-me">Hire Me</a></li>
            </ul>
            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
        <%= yield %>
    </body>
    <%= javascript_pack_tag 'nav' %>
</html>
